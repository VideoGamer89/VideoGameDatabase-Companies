<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list_companies" >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_cb_company"
        android:layout_alignTop="@+id/list_item_string_company" />

    <TextView
        android:id="@+id/list_item_string_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_cb_company"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/list_item_cb_company"
        android:textStyle="bold" />

</RelativeLayout>
